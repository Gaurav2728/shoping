<%= form_for @order, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, t('.name'), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field',size: 40 %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address, t('.address_html'), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :address, :class => 'text_area',rows: 3, cols: 40 %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, t('.email') :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field', size: 40 %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :pay_type, t('.pay_type'), :class => 'control-label' %>
    <div class="controls">
      <%= f.select :pay_type, Order::PAYMENT_TYPES, prompt: t('.pay_prompt_html') %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit t('.submit'), :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                orders_path, :class => 'btn' %>
  </div>
<% end %>
