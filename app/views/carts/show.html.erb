<% provide(:title, 'Your Cart Items') %>

<h3>Your Books Cart</h3>
<ul>
<% @cart.line_items.each do |item| %>
<li>
  <%= item.quantity %> &times; 
  <%= item.product.title %> &raquo;
  <%= number_to_currency(item.product.price) %>
</li>
<% end %>
<br />
Total
<%= number_to_currency(@cart.total_price) %>
</ul>



<%= button_to 'Empty cart', @cart, method: :delete, confirm: 'Are you sure?' %>
<%= button_to 'Empty cart', @cart, :class => 'btn btn-danger', confirm: 'Are you sure?' %>

